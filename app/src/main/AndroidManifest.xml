<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="lk.peruma.simpletodo">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MyTODOsActivity"
            android:label="SimpleTODO">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".AddTODOActivity"
            android:label="My TODO">
            <intent-filter>
                <action android:name="lk.peruma.simpletodo.AddTODOActivity" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <receiver android:name=".NotificationBroadcastReceiver"/>
        <receiver android:name=".NotificationActionReceiver"/>
    </application>

</manifest>